{
  "openapi": "3.0.1",
  "info": {
    "title": "DevNexus.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Posts": {
      "post": {
        "tags": [
          "Posts"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "ImageFile": {
                    "type": "string",
                    "format": "binary"
                  },
                  "CategoryId": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "Translations": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/TranslationDto"
                    }
                  }
                }
              },
              "encoding": {
                "ImageFile": {
                  "style": "form"
                },
                "CategoryId": {
                  "style": "form"
                },
                "Translations": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Posts/{id}": {
      "get": {
        "tags": [
          "Posts"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Lang": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "TranslationDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "nullable": true
          },
          "content": {
            "type": "string",
            "nullable": true
          },
          "lang": {
            "$ref": "#/components/schemas/Lang"
          }
        },
        "additionalProperties": false
      }
    }
  }
}